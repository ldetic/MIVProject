@model IEnumerable<MIVProject.currency>
@using Resources
@{
    ViewBag.Title = Local.Currency;
}

<h2>@Local.Currency</h2>

<p>
    @Html.ActionLink(Local.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.abbreviation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.abbreviation)
        </td>
        <td>
            @Html.ActionLink(Local.Edit, "Edit", new { id = item.currencyID }) |           
            @Html.ActionLink(Local.Delete, "Delete", new { id=item.currencyID })
        </td>
    </tr>
}

</table>
