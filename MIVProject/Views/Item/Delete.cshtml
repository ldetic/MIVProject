@model MIVProject.item
@using Resources
@{
    ViewBag.Title = Local.Delete;
}

<h2>@Local.Delete</h2>

<h3>@Local.SureYouWantToDelete</h3>
<div>
    <h4>@Local.Item</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Local.Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @Local.Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            @Local.MeasureUnit
        </dt>

        <dd>
            @Html.DisplayFor(model => model.unitOfMeasure)
        </dd>

        <dt>
            @Local.Quantity
        </dt>

        <dd>
            @Html.DisplayFor(model => model.quantity)
        </dd>

        <dt>
           @Local.SubCategory
        </dt>

        <dd>
            @Html.DisplayFor(model => model.itemSubCategory.name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@Local.Delete class="btn btn-default" /> |
            @Html.ActionLink(Local.Back, "Index")
        </div>
    }
</div>
