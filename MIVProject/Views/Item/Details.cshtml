@model MIVProject.item
@using Resources
@{
    ViewBag.Title = Local.Details;
}

<h2>@Local.Details</h2>

<div>
    <h4>@Local.Item</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Local.Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @Local.Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            @Local.MeasureUnit
        </dt>

        <dd>
            @Html.DisplayFor(model => model.unitOfMeasure)
        </dd>

        <dt>
            @Local.Quantity
        </dt>

        <dd>
            @Html.DisplayFor(model => model.quantity)
        </dd>

        <dt>
            @Local.SubCategory
        </dt>

        <dd>
            @Html.DisplayFor(model => model.itemSubCategory.name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(Local.Edit, "Edit", new { id = Model.itemID }) |
    @Html.ActionLink(Local.Back, "Index")
</p>
