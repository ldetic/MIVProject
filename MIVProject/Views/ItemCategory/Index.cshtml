@model IEnumerable<MIVProject.itemCategory>
@using Resources
@{
    ViewBag.Title = Local.ItemCategory;
}

<h2>@Local.ItemCategory</h2>

<p>
    @Html.ActionLink(Local.CreateNew, "Create")
</p>
<table id ="itemCategory-table" class="table object-table" data-toggle="table" data-sort-name="id" data-sort-order="asc"
         data-search="true" data-toolbar="#toolbar" data-pagination="true"
         data-query-params="queryParams">
    <thead>
        <tr>
            <th>
                @Local.Name
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.ActionLink(Local.Edit, "Edit", new { id = item.categoryID }) |
                @Html.ActionLink(Local.Delete, "Delete", new { id = item.categoryID })
            </td>
        </tr>
    }

    </table>
