@model MIVProject.supplyItem
@using Resources
@{
    ViewBag.Title = Local.Delete;
}

<h2>@Local.Delete</h2>

<h3>@Local.SureYouWantToDelete</h3>
<div>
    <h4>@Local.SupplyItem</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Local.Quantity
        </dt>

        <dd>
            @Html.DisplayFor(model => model.quantity)
        </dd>

        <dt>
           @Local.Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.price)
        </dd>

        <dt>
            @Local.Quality
        </dt>

        <dd>
            @Html.DisplayFor(model => model.quality)
        </dd>

        <dt>
            @Local.Comment
        </dt>

        <dd>
            @Html.DisplayFor(model => model.comment)
        </dd>

        <dt>
            @Local.shipDate
        </dt>

        <dd>
            @Html.DisplayFor(model => model.shipDate)
        </dd>

        <dt>
            @Local.Item
        </dt>

        <dd>
            @Html.DisplayFor(model => model.item1.name)
        </dd>

        <dt>
            @Local.Supply
        </dt>

        <dd>
            @Html.DisplayFor(model => model.supplyHeader.supplyID)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@Local.Delete class="btn btn-default" /> |
            @Html.ActionLink(Local.Back, "Index")
        </div>
    }
</div>
