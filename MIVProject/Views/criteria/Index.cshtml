@model IEnumerable<MIVProject.criteria>
@using Resources
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(Local.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink(Local.Edit, "Edit", new { id=item.criteriaID }) |
            @Html.ActionLink(Local.Details, "Details", new { id=item.criteriaID }) |
            @Html.ActionLink(Local.Delete, "Delete", new { id=item.criteriaID })
        </td>
    </tr>
}

</table>
