@model MIVProject.mivUser
@using Resources
@{
    ViewBag.Title = Local.Delete;
}

<h2>@Local.Delete</h2>

<h3>@Local.SureYouWantToDelete</h3>
<div>
    <h4>@Local..MivUser</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Local.username
        </dt>

        <dd>
            @Html.DisplayFor(model => model.username)
        </dd>

        <dt>
           @Local.password
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

        <dt>
           @Local.FirstName
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstName)
        </dd>

        <dt>
           @Local.LastName
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastName)
        </dd>

        <dt>
            @Local.Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            @Local.Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.userType.type)
        </dd>

     </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@Local.Delete class="btn btn-default" /> |
            @Html.ActionLink(Local.Back, "Index")
        </div>
    }
</div>
