@model MIVProject.itemSubCategory
@using Resources
@{
    ViewBag.Title = Local.Details;
}

<h2>@Local.Details</h2>

<div>
    <h4>@Local.ItemSubCategory</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Local.Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @Local.ItemCategory
        </dt>

        <dd>
            @Html.DisplayFor(model => model.itemCategory.name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(Local.Edit, "Edit", new { id = Model.subCategoryID }) |
    @Html.ActionLink(Local.Back, "Index")
</p>
