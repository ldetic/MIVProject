@model IEnumerable<MIVProject.itemSubCategory>
@using Resources
@{
    ViewBag.Title = Local.ItemSubCategory;
}

<h2>@Local.ItemSubCategory</h2>

<p>
    @Html.ActionLink(Local.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Local.Name
        </th>
        <th>
            @Local.ItemCategory
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.itemCategory.name)
        </td>
        <td>
            @Html.ActionLink(Local.Edit, "Edit", new { id=item.subCategoryID }) |            
            @Html.ActionLink(Local.Delete, "Delete", new { id=item.subCategoryID })
        </td>
    </tr>
}

</table>
