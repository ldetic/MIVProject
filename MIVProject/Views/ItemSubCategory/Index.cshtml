@model IEnumerable<MIVProject.itemSubCategory>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Local.Name
        </th>
        <th>
            @Local.ItemCategory
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.itemCategory.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.subCategoryID }) |
            @Html.ActionLink("Details", "Details", new { id=item.subCategoryID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.subCategoryID })
        </td>
    </tr>
}

</table>
